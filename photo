    <!-- 图片大图预览 (Lightbox) -->
    <div id="lightbox" class="fixed inset-0 z-[60] bg-black/95 hidden items-center justify-center p-4" onclick="closeLightbox()">
        <img id="lightbox-img" src="" class="max-w-full max-h-full object-contain">
        <button class="absolute top-6 right-6 text-white text-3xl">
            <i class="fa-solid fa-xmark"></i>
        </button>
